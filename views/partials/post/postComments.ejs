<link rel="stylesheet" href="/css/postComments.css">

<% comments.forEach(comment => { %>

    <div class="row comment mt-5">
        <div class="col comment-text">
            <%= comment.text %>
        </div>
    </div>
    <div class="row commenter-profile pb-2">
        <div class="col d-inline-block comment-pfp-holder">
            <img class="comment-pfp" src="<%= comment.profile.pfp %>"/>
            <a href="/profile/<%= comment.profile.username %>"> <%= comment.profile.display %> </a>
        </div>
<!--        <div class="col-2 comment-name-holder">-->
<!--            -->
<!--        </div>-->
    </div>

<% }) %>
