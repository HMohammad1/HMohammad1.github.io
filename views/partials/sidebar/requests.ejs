<script type ="text/javascript" src="/js/requests.js"></script>
<link rel="stylesheet" href="/css/addFriend.css">
<div class="row prog-bar"></div>
<a href="/">
<div class="row menu-item d-inline-block" id="friend-requests">
    <i class="menu-icon bi bi-person-fill-add"></i>
    <span class="menu-text">Friend Requests</span>
</div>
</a>
<% requests.forEach(request => { %>
    <div class="row friend-result  pt-2" id="profile/<%= request.profile.username %>">
        <div class="col-7">
            <img src="<%= request.profile.pfp %>" class="profile-icon">
            <span class="menu-text"><%= request.profile.username %></span>
        </div>
        <div class="req-btns col-5">
            <button class="btn btn-danger req-btn decline" id="<%=request.reqID %>"> Decline </button>
            <button class="btn btn-danger req-btn accept" id="<%=request.reqID %>"> Accept </button>
        </div>
    </div>
<% }) %>