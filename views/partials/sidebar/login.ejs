    <link rel="stylesheet" href="/css/login.css">
    <script type ="text/javascript" src="/public/js/signUpValidator.js"></script>
    
    <div class="col userDetails">
        <div class="tab">
            <button class="tablinks login active">Login</button>
            <button class="tablinks signup">Sign Up</button>
        </div>
        <div id="signup" class="tabcontent">
<!-- -------------------------------Signup Form -->
            <form id="signupForm" name="contact-details" action="/API/signup" method="post">
                <div class="personal-info">
                    <div class="row contact-name">

                        <input id="fname" class="col form-control" name="fname" placeholder="First Name" required>
                        <input id="lname" class="col form-control" name="lname" placeholder="Last Name" required>
                    </div>
<!-- -------------------------- Validated data -->
                        <label for="email"><% if (typeof(emailError) !== 'undefined' && emailError === true) { %>
                            <%= message %>
                        <% } %> </label>
                        <input id="email" name="email" class="form-control" placeholder="Email Address" required>
                         <label for="emailcheck" id="emailcheck" style="color: red;font-size:0.5em;">
                                Your email must be a valid email!
                         </label>

                        <!-- <label for="dobcheck"><span STYLE="font-size:0.5em;color: red;">(required, You need to be older then 16 years old)</span></label> -->
                        <input type="date" id="DOB" class="form-control"name="DOB" required/>
                         <label for="dobcheck" id="dobcheck" style="color: red;font-size:0.5em;">
                            **You need to be over 16 years old
                        </label>
                </div>

                <div class="user">
                    <label for="usercheck"> <% if (typeof(usernameError) !== 'undefined' && usernameError === true) { %>
                            <%= message %>
                        <% } %> </label>
                    <input id="username" name="username" class="form-control" placeholder="Username" required/>
                     <label for="usercheck" id="usercheck" style="color: red; font-size: 0.5em;">
                            **Username is missing!
                        </label>
                    <input id="disp_name" name="disp_name" class="form-control" placeholder="Display Name" required/>
                </div>
                <div class="contact-details">
                </div>
                <div class="password">
                    <!-- <label for="passcheck"><span STYLE="font-size:0.5em; color: red;">(required, invalid password)</span></label> -->
                    <input type="password" id="pw1" name="pw1" class="form-control" placeholder="Password" required/>
                    <label for="passcheck" id="passcheck" style="color: red; font-size: 0.5em;">
                        **Password is missing!
                    </label>
                    <!-- <span STYLE="font-size:0.5em; color: red;">(required, password do not match)</span> -->
                    <label for="passcheck2"> <% if (typeof(passwordError) !== 'undefined' && passwordError === true) { %>
                            <%= message %>
                        <% } %> </label>
                    <input  type="password" id="pw2" name="pw2" class="form-control" placeholder="Confirm Password" required/>
                     <label for="passcheck2" id="passcheck2" style="color: red; font-size: 0.5em;">
                        ** Password does not match!
                    </label>
                </div>
                <div class="row">
                    <!-- <button class="btn btn-danger" disabled="disabled" type="submit" name="submitBtn" id="submitBtn"> Sign-up </button> -->
                    <button class="btn btn-danger" type="submit" name="submit" id="submit"> Sign-up </button>
               
                </div>
            </form>
        </div>
        <div id="login" class="tabcontent active">
<!-- ------------------------------Login -->
            <form name="login" action="/API/login" method="post">
                <div class="username">
                    <label for="ID"> <% if (typeof(IDerror) !== 'undefined' && IDerror === true) { %>
                        <%= message %>
                    <% } %> </label>
                    <input id="ID" name="ID" class="form-control" placeholder="Username / Email"/>
                </div>
                <div class="password">
                    <label for="pw"> <% if (typeof(pwError) !== 'undefined' && pwError === true) { %>
                            <%= message %>
                        <% } %> </label>
                    <input type="password" id="pw" name="pw" class="form-control" placeholder="Password"/>
                </div>
                <div class="row">
                    <button class="btn btn-danger" type="submit" name="submit" id="submit" > Log-in </button>
                </div>
            </form>
        </div>
    </div>
