<link rel="stylesheet" href="/css/post.css">
<div class="map-overlay post-holder no-scroll-bar" id="<%= post.postID %>" >
        <div class="container p-0 fullHeight">
            <div class="row">
                <div class="col post-heading">
                    <%= post.title %>
                </div>
            </div>
            <div class="row img-holder-main carousel slide p-0" id="postImgs">
                <div class="carousel-inner">
                    <% if (post.media) { %>
                        <% post.media.forEach((src, index) => { %>
                            <div class="carousel-item <% if (index == 0) { %>active<% } %>">
                                <img src="<%= src %>" id="<%= index+1 %>" style="height: 695px" class="d-block w-100" alt="...">
                            </div>
                        <% }) %>
                    <% } %>
                </div>
                <a class="carousel-control-prev" href="#postImgs" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#postImgs" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row post-reactions p-4">
                <% if (post.allowReacts == 1) { %>
                    <%- include('../post/reactions', {reacts: post.reacts, user: user}); %>
                <% } else {%>
                    <div class="noComments-reactions">
                    This post doesn't allow reactions.
                    </div>
                <% } %>
            </div>
            <div class="row post-desc pt-2">

                <div class="col">
                    <div class="row">
                        <div class="col px-3">
                            <%= post.desc %>
                        </div>
                    </div>
                    <% if (user.userID != 0 && post.allowComments == 1) { %>
                        <div class="row">
                            <div class="col px-3">
                                <div class="row add-comment">
                                    <div class="col">
                                        <div class="row add-comment">
                                            <textarea rows="4" cols="70" type="text" name="comment" id="comment" placeholder="Add a comment" class="form-control comment-input"></textarea>
                                        </div>
                                        <div class="row comment-btn-holder px-3 btn-margins">
                                            <button class="btn comment-btn cancel" disabled="disabled">Cancel</button>

                                            <button class="btn comment-btn add" disabled="disabled">Post</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="row all-comments p-3">
                <% if (post.allowComments) { %>
                <div class="col">
                        <div class="post-comments">
                            <div class="spinner-border text-danger" role="status">
                                <span class="sr-only">Loading comments</span>
                            </div>
                        </div>
                </div>
                    <% } else {%>
                        <div class="col noComments-reactions">
                            This post doesn't allow comments.
                        </div>
                    <% } %>



            </div>

        </div>

</div>

