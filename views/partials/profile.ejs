<script type="text/javascript" src="/js/profile.js"></script>
<div class="row prog-bar"></div>
<div class="row p-1">
    <div class="col-6 border border-danger">
        <button class="btn btn-default btn-lg button"><i class="fa fa-close"></i></button>
    </div>

    <% if (myprofile) { %>
        <div class="col-6 border border-danger d-flex justify-content-end">
            <button type="button" class="btn btn-default btn-lg text-center"><a href="/API/logout"><i
                            class="fa fa-sign-out"></i><br>Logout</a></button>
        </div>
    <% } %>
</div>
<div class="row p-1">
    <div class="col-12  border border-danger">
        <div>
            <img src="<%= profile.pfp %>" class="profile-icon2 centre">
        </div>
    </div>
</div>
<br>
<h2><%= profile.display %></h2>
<p> Hey welcome to my page!</p>
<br>
<div class="row p-1">
    <div class="col-6 p-0 border border-danger">
        <button class="btn btn-danger profile-button">Friends</button>
    </div>
    <div class="col-6 p-0 border border-danger">
        <button class="btn btn-danger profile-button">Scraps</button>
    </div>
</div>
<div class="row p-1">
    <div class="col-12 p-0 border border-danger">
        <button class="btn btn-danger profile-button">Edit Profile</button>
    </div>
</div>

<div class="row p-0">
    <div class="col-12 p-0">
        <div class="posts-holder" id="<%= profile.userID %>">
            <div class="spinner-border text-danger" role="status">
                <span class="sr-only">Loading <%= profile.disp_name %>'s Posts</span>
            </div>
        </div>
    </div>
</div>
