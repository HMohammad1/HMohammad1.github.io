<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100;0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js" type="text/javascript"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/9cacf08ace.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://unpkg.com/@googlemaps/markerclusterer/dist/index.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type ="text/javascript" src="/js/mainPage.js"></script>
    <script type="text/javascript" src="/js/navigation.js"></script>
    <script type ="text/javascript" src="/js/simpleMap.js"></script>
    <script type ="text/javascript" src="/js/application.js"></script>
    <script type="text/javascript" src="/js/mapHandler.js"></script>
    <link rel ="stylesheet" href="/css/mainPage.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/post.css">


</head>
<body>
<%- include("partials/header"); %>
    <div class="container-fluid h-100">

        <div class="row h-100">
            <div class="col-md-4 col-lg-3 col-xl-2 border border-dark p-1 sidebar">
                <div class="row prog-bar"></div>
                <% if(typeof(sidebar) !== 'undefined'){ %>
                    <% switch(sidebar) {
                        case 'profile': %>
                            <%- include("partials/profile", {profile: profile, myprofile: myprofile, openPost: openPost}); %>
                            <% break;
                        case 'friends': %>
                            <%- include("partials/sidebar/friends", {friends: friends, empty: empty}); %>
                            <% break;
                        case 'add-friend': %>
                            <%- include("partials/sidebar/addFriends"); %>
                            <% break;
                        case 'settings': %>
                            <%- include("partials/sidebar/settings"); %>
                            <% break;
                        case 'login': %>
                            <%- include("partials/sidebar/login"); %>
                            <% break;
                        case 'addPostsPage': %>
                            <%- include("partials/sidebar/addPostsPage"); %>
                            <% break;
                        default: %>
                            <%- include("partials/sidebar/menu"); %>
                            <% break;
                    } %>
                <%# if not logged in show login / signup fields %>
                <% } else if(user.userID == 0){ %>
                    <%- include("partials/sidebar/login"); %>
                <% } else { %>
                    <%- include("partials/sidebar/menu"); %>
                <% } %>  
            </div>
            <div class="col-md-8 col-lg-9 col-xl-10 p-0">

                <div id="map" class="image"></div>

            </div>
        </div>
        <div class="row">
            <%- include("partials/footer"); %>
        </div>
    </div>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBY4bqQwcoN1yq_6XNFB3K-cDiXlD2k5I&callback=initMap">
</script>



</body>
</html>
