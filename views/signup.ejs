<!DOCTYPE html>
    <head>
        <title>Create Account | Scrapmap</title>
    </head>
    <body>
        <h1>Sign Up!</h1>
        <div class="containter-fluid">
            
            <form name="contact-details" action="API/signup" method="post"></form>
            <!-- <form name="contact-details" action="API/signup" method="GET"></form>     -->
                <div class="personal-info">
                    <div class="username">
                        <label for="username">Username <span>(required, need at least 3 charcaters)</span></label>
                        <input id="username" name="username" placeholder="Username" required/>
                        <!-- <label id="usercheck" style="color: red;">
                            **Username is missing!
                        </label> -->
                        <input id="disp_name" name="disp_name" placeholder="Display Name"/>
                    </div>
                    <div class="contact-name">
                        <input id="fname" name="fname" placeholder="First Name" required>
                        <input id="lname" name="lname" placeholder="Last Name" required>
                    </div>

                    <div class="contact-details">
                        <label for="email">Email <span>(required, invaild email)</span></label>
                        <input id="email" name="email" placeholder="Email Address" required>
                         <!-- <label id="emailcheck" class="form-text
                        text-muted invalid-feedback">
                                Your email must be a valid email!
                         </label> -->
                    </div>
                </div>
                <div class="password">
                    <label for="pw1">Create Password <span>(required, invalid password. Eg.: zS2!aaaa)</span></label>
                    <input id="pw1" name="pw1" placeholder="Password" required/>
                    <!-- <label id="passcheck" style="color: red;">
                        **Password is missing!
                    </label> -->
                    <label for="pw2">Password <span>(required, password do not match)</span></label>
                    <input id="pw2" name="pw2" placeholder="Confirm Password" required/>
                    <!-- <label id="passcheck2" style="color: red;">
                        ** Password confirmation!
                    </label> -->
                </div>
                <div class="row">
                    <!-- <div id="err"> </div> -->
                    <button type="submit" name="submit"></button>
                </div>

